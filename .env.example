# Baseball Stats Application Configuration
# Copy this file to .env and fill in your values

# Database Configuration
MONGODB_URL=mongodb://username:password@host:port/database
DATABASE_NAME=baseball_stats

# Scraper Configuration (optional - defaults provided)
USER_AGENT=Mozilla/5.0 (compatible; BaseballStatsBot/1.0)
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_BACKOFF=2.0
RATE_LIMIT_DELAY=1.0

# Cache Configuration (optional - defaults provided)
ENABLE_CACHE=true
CACHE_TTL_HOURS=24
CACHE_BACKEND=mongodb

# Application Configuration (optional - defaults provided)
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
